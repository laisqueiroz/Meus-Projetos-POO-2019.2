package saladeaula;

import java.util.Scanner;

public class SaladeAula {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Sala aluno = new Sala();

		while (true) {
			System.out.println("adicionar aluno" + "\n" + "quantidade alunos"
					+ "\n" + "lista alunos" + "\n" + "idade alunos" + "\n"
					+ "remover aluno" + "\n" + "mostrar aluno");
			String Line = scanner.nextLine();
			String[] vet = Line.split(" ");
			if (vet[0].equals("adicionar") && vet[1].equals("aluno"))
				aluno = new Sala(vet[2], Integer.parseInt(vet[3]));
			else if (vet[0].equals("status"))
				Sala.status();
			else if (vet[0].equals("quantidade") && vet[1].equals("alunos"))
				System.out.println(Sala.nextId);
			else if (vet[0].equals("lista") && vet[1].equals("alunos"))
				Sala.mostrar();
			else if (vet[0].equals("idade") && vet[1].equals("alunos"))
				System.out.println(Sala.age);
			else if (vet[0].equals("remover") && vet[1].equals("aluno"))
				Sala.remover(Integer.parseInt(vet[2]));
			else if (vet[0].equals("mostrar") && vet[1].equals("aluno"))
				Sala.exibir(Integer.parseInt(vet[2]));

			
	
		}
		
	}
}
