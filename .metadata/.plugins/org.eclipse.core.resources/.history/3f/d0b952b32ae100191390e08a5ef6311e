package Trabalho;

import java.util.ArrayList;

class Pass{
	String id;
	String ticket;
	int idade;
	
	
	
	public String getId() {
		return id;
	}

	public void setId(String id) {
		this.id = id;
	}

	public String getTicket() {
		return ticket;
	}

	public void setTicket(String ticket) {
		this.ticket = ticket;
	}

	public Pass(String id, String ticket) {
		super();
		this.id = id;
		this.ticket = ticket;
	}

	public String toString() {
		return "Nome" + id + ": " + ticket;
	}
	
	
	
}
public class Topic {
	ArrayList<Pass> poltronas;
	int qnt;
	int poltronaPref;
	public Topic(int qnt, int pref) {
		super();
		poltronas = new ArrayList<Pass>();
		for (int i = 0; i < qnt; i++)
			poltronas.add(null);
		this.qnt = qnt;
		this.poltronaPref = pref;
	}
	
	public void embarcar(String nome, String ticket, int idade){
		
	}
	@Override
	public String toString() {
		String inicio = "| ";
		for (int i = 0 ; i < poltronas.size(); i++){	
			if(i < poltronaPref){
				inicio += "@ ";
			}
//			if(poltronas.get(i) != null){
//				inicio += poltronas.get(i) + " ";
//			}
			else{
				inicio += "= ";
			}
		}
		inicio += "|";
		return inicio;
	}


	public static void main(String[] args) {
		Topic zona = new Topic(10, 2);
		System.out.println(zona);

	}

}
