package Trabalho;

import java.util.ArrayList;

public class Topic {
	ArrayList<Pass> poltronas;
	int qnt;
	int poltronaPref;
	public Topic(int qnt, int pref) {
		super();
		poltronas = new ArrayList<Pass>();
		for (int i = 0; i < qnt; i++)
			poltronas.add(null);
		this.qnt = qnt;
		this.poltronaPref = pref;
	}
	
	public void embarcar(String nome, int idade){
		this. = nome;
		if (idade >= 60){
			if (poltronas.get(0) == null){
				poltronas.set(0, this.id);
			}
		}
	}
	@Override
	public String toString() {
		String inicio = "| ";
		for (int i = 0 ; i < poltronas.size(); i++){	
			if(i < poltronaPref){
				inicio += "@ ";
			}
			else if(poltronas.get(i) != null){
				inicio += poltronas.get(i) + " ";
			}
			else{
				inicio += "= ";
			}
		}
		inicio += "|";
		return inicio;
	}


}
