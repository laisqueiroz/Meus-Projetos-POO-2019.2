package Trabalho;

import java.util.ArrayList;

class Pass{
	String id;
	String ticket;
	
	
	
	public String getId() {
		return id;
	}

	public void setId(String id) {
		this.id = id;
	}

	public String getTicket() {
		return ticket;
	}

	public void setTicket(String ticket) {
		this.ticket = ticket;
	}

	public Pass(String id, String ticket) {
		super();
		this.id = id;
		this.ticket = ticket;
	}

	public String toString() {
		return "Nome" + id + ": " + ticket;
	}
	
	
	
}
public class Topic {
	ArrayList<Pass> poltronas;
	int qnt;
	int poltronaPref = 2;
	public Topic(int qnt) {
		super();
		poltronas = new ArrayList<Pass>();
		for (int i = 0; i < qnt; i++)
			poltronas.add(null);
		this.qnt = qnt;
	}
	
	public void embarcar(String nome, String ticket){
		
	}
	@Override
	public String toString() {
		String inicio = "| ";
		for (Pass passageiro : this.poltronas){
			for(int i = 0; i < this.poltronaPref; i++){
				inicio += "@ ";
			}
			if(passageiro != null){
				inicio += passageiro + " ";
			}
			else{
				inicio += "= ";
			}
		}
		inicio += "|";
		return inicio;
	}


	public static void main(String[] args) {
		Topic zona = new Topic(10);
		System.out.println(zona);

	}

}
