package agencia;

import java.util.ArrayList;

public class Banco {
	private ArrayList<Cliente> clientes;
	private ArrayList<Conta> contas;
	private ArrayList<Integer> identificador; 
	private int nextId;
	
	public Banco() {
		super();
		this.clientes = new ArrayList<Cliente>();
		this.contas = new ArrayList<Conta>();
		this.identificador = new ArrayList<Integer>();
	}
	
	public void addCliente(String cliente){
		clientes.add(new Cliente(cliente));
		identificador.add(nextId);
		nextId++;
		
		
		
		
	}

	public ArrayList<Cliente> getClientes() {
		return clientes;
	}

	public void setClientes(ArrayList<Cliente> clientes) {
		this.clientes = clientes;
	}

	public ArrayList<Conta> getContas() {
		return contas;
	}

	public void setContas(ArrayList<Conta> contas) {
		this.contas = contas;
	}

	@Override
	public String toString() {
		for (int i = 0; i < this.clientes.size(); i++){
			return "" + this.identificador.get(i) + ":" + this.clientes.get(i) + ":" + this.contas;
		}
	}
	
	
}